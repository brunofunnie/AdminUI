$C = "../../Common.ui";
$Nav = "../Nav/Buuz135_AdminUI_TopNavigationBar.ui";

@CustomStyle = TextButtonStyle(
              Default: (Background: $C.@DefaultSquareButtonDefaultBackground, LabelStyle: $C.@DefaultButtonLabelStyle),
              Hovered: (Background: $C.@DefaultSquareButtonHoveredBackground, LabelStyle: $C.@DefaultButtonLabelStyle),
              Pressed: (Background: $C.@DefaultSquareButtonPressedBackground, LabelStyle: $C.@DefaultButtonLabelStyle),
              Disabled: (Background: $C.@DefaultSquareButtonDisabledBackground, LabelStyle: $C.@DefaultButtonDisabledLabelStyle),
              Sounds: $C.@ButtonSounds,
            );


$C.@PageOverlay {
  $Nav.@AdminUITopNavigationBar #AdminUITopNavigationBar {}
  $C.@DecoratedContainer {
    Anchor: (Width: 600, Height: 669);


    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        $C.@Title {
          @Text = "Mutes";
        }

        $C.@HeaderSearch {}
      }
    }

    #Content {
      LayoutMode: Left;

      Group #Main {
        LayoutMode: Top;

        Group {
          LayoutMode: Left;

          Group #StatusGroup {
            FlexWeight: 1;
            LayoutMode: Top;
            Anchor: (Right: 10);

            Label {
              Anchor: ();
              Style: (
                FontSize: 18,
                TextColor: #93844c,
                 RenderBold: true
              );
              Text: "Add Username";
            }
            
            $C.@TextField #UsernameField {
                FlexWeight: 1;
                Anchor: (Height: 28);
                Style: (
                  FontSize: 14,
                  TextColor: #ffffff(0.85)
                );
              }
          }

          Group #AddMuteGroup {
            FlexWeight: 1;
            LayoutMode: Top;

            Label {
              Anchor: ();
              Style: (
                FontSize: 18,
                TextColor: #93844c,
                 RenderBold: true
              );
            
              Text: "Duration";
            }

            Group {
              LayoutMode: Left;

              $C.@TextField #DurationField {
                FlexWeight: 1;
                Anchor: (Height: 28);
                PlaceholderText: "1d 1h 30m 30s";
                Style: (
                  FontSize: 14,
                  TextColor: #ffffff(0.85)
                );
              }
            }
          }
          
        }

        Group #AddMuteGroup {
            LayoutMode: Top;

            Label {
              Anchor: ();
              Style: (
                FontSize: 18,
                TextColor: #93844c,
                 RenderBold: true
              );
              Text: "Reason";
            }

            Group {
              LayoutMode: Left;

              $C.@TextField #ReasonField {
                FlexWeight: 1;
                Anchor: (Height: 28);
                Style: (
                  FontSize: 14,
                  TextColor: #ffffff(0.85)
                );
              }

              $C.@TextButton #AddToMuteButton {
                Anchor: (Left: 10, Height: 28, Right: 4);
                Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
                Text: "Add";
                Style: @CustomStyle;
              }
            }
          }

        Group #Separator{
          Anchor: (Width: 300, Top: 16, Bottom: 10);
          OutlineColor: #93844c;
          OutlineSize: 0.5;
        }

        Label {
          Anchor: ();
          Style: (
            FontSize: 18,
            TextColor: #93844c,
            RenderBold: true
            );
          Text: "Muted Players";
        }

        Group #IndexList {
          Anchor: (Width: 580, Top: 2);
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Padding: (Left: 7);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #IndexCards {
            LayoutMode: Top;
          }
        }
      }
    }
  }
}

$C.@BackButton {}