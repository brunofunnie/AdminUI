$C = "../../Common.ui";
$Nav = "../Nav/Buuz135_AdminUI_TopNavigationBar.ui";


@CustomLabelStyle = LabelStyle(
  FontSize: 14,
  TextColor: #bfcdd5,
  RenderBold: true,
  RenderUppercase: true,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

@CustomStyle = TextButtonStyle(
  Default: (Background: $C.@DefaultSquareButtonDefaultBackground, LabelStyle: @CustomLabelStyle),
  Hovered: (Background: $C.@DefaultSquareButtonHoveredBackground, LabelStyle: @CustomLabelStyle),
  Pressed: (Background: $C.@DefaultSquareButtonPressedBackground, LabelStyle: @CustomLabelStyle),
  Disabled: (Background: $C.@DefaultSquareButtonDisabledBackground, LabelStyle: @CustomLabelStyle),
  Sounds: $C.@ButtonSounds,
);




$C.@PageOverlay {


  $Nav.@AdminUITopNavigationBar #AdminUITopNavigationBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 600, Height: 669);


    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        $C.@Title {
          @Text = "Players";
        }

        $C.@HeaderSearch {}
      }
    }

    #Content {
      LayoutMode: Left;

      Group #Main {
        LayoutMode: Top;

        Group #QuickCommands {
          LayoutMode: Left;
         

          Label{
            FlexWeight: 1;
          }

          $C.@TextButton #KillAllButton {
            FlexWeight: 1;
            Anchor: (Height: 20, Right: 4, Left: 10, Width: 90);
            Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
            Text: "KILL ALL";
            Style: @CustomStyle;
          }

          $C.@TextButton #TeleportAllButton {
            FlexWeight: 1;
            Anchor: (Height: 20, Right: 4, Left: 10, Width: 90);
            Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
            Text: "TP ALL HERE";
            Style: @CustomStyle;
          }

          $C.@TextButton #KickAllButton {
            FlexWeight: 1;
            Anchor: (Height: 20, Right: 4, Left: 10, Width: 90);
            Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
            Text: "KICK ALL";
            Style: @CustomStyle;
          }

        }

        Label {
          Anchor: ();
          Style: (
            FontSize: 18,
            TextColor: #93844c,
            RenderBold: true
            );
          Text: "Online Players";
        }

        Group #IndexList {
          Anchor: (Width: 580, Top: 2);
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Padding: (Left: 7);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #IndexCards {
            LayoutMode: Top;
          }
        }
      }
    }
  }
}

$C.@BackButton {}