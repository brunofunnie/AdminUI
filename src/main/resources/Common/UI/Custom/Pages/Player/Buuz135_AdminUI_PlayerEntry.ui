$C = "../../Common.ui";


@CustomLabelStyle = LabelStyle(
  FontSize: 14,
  TextColor: #bfcdd5,
  RenderBold: true,
  RenderUppercase: true,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

@CustomStyle = TextButtonStyle(
  Default: (Background: $C.@DefaultSquareButtonDefaultBackground, LabelStyle: @CustomLabelStyle),
  Hovered: (Background: $C.@DefaultSquareButtonHoveredBackground, LabelStyle: @CustomLabelStyle),
  Pressed: (Background: $C.@DefaultSquareButtonPressedBackground, LabelStyle: @CustomLabelStyle),
  Disabled: (Background: $C.@DefaultSquareButtonDisabledBackground, LabelStyle: @CustomLabelStyle),
  Sounds: $C.@ButtonSounds,
);

Button #FullPlayerEntry {
  LayoutMode: Top;
  Background: $C.@InputBoxBackground;
  Padding: (Top: 5, Bottom: 5, Left: 10, Right: 10);
  Anchor: ( Bottom: 5);
  Group {
    LayoutMode: Left;
    
    FlexWeight: 1;
    

    Label #MemberName {
        Style: (
        FontSize: 16,
        RenderBold: true,
        TextColor: #ffffff
        );
       
        Padding: (Right: 2, Top: 2);
    }
    Label #Ping {
      Text: "Ping";
      Style: (
        FontSize: 12,
        RenderBold: false,
        TextColor: #ffffff
      );
      Anchor: (Left: 2, Top: 4, Bottom: 2);
      Padding: (Left: 6, Right: 6, Top: 1, Bottom: 0);
      Background: (Color: #e8ec1a83);
      OutlineColor: #e8ec1a(0.87);
      OutlineSize: 1.5;
      ContentHeight: 10;
      Visible: true;
    }
    Label #IsOp {
      Text: "    OP    ";
      Style: (
        FontSize: 12,
        RenderBold: false,
        TextColor: #ffffff
      );
      Anchor: (Left: 2, Top: 4, Bottom: 2);
      Padding: (Left: 6, Right: 6, Top: 1, Bottom: 0);
      Background: (Color: #c21aec83);
      OutlineColor: #c21aecde;
      OutlineSize: 1.5;
      ContentHeight: 10;
      Visible: false;
    }
    Label #IsWhitelisted {
      Text: "Whitelisted";
      Style: (
        FontSize: 12,
        RenderBold: false,
        TextColor: #ffffff
      );
      Anchor: (Left: 2, Top: 4, Bottom: 2);
      Padding: (Left: 6, Right: 6, Top: 1, Bottom: 0);
      Background: (Color: #32ec1a83);
      OutlineColor: #32ec1ade;
      OutlineSize: 1.5;
      ContentHeight: 10;
      Visible: false;
    }
    Label {
      FlexWeight: 1;
    }
    Group #ExpandedIcon{
      Background: "../../Common/DropdownPressedCaret.png";
      Anchor: (Width: 8, Height: 4, Top: 6, Bottom: 4);
    }
    Group #ExpandedIconDown{
      Background: "../../Common/DropdownDown.png";
      Anchor: (Width: 14, Height: 8,);
      Padding: (Top: 10);
      Visible: false;
    }
  }

  Label #MemberUUID {
    Style: (
      FontSize: 12,
      RenderBold: false,
      TextColor: #ffffff(0.3)
    );
    Anchor: (Left: 1, Top: 0);
  }

  Group #ExtendedInfo{
    LayoutMode: Top;
    Visible: false;

    Group {
      LayoutMode: Left;
      Label  {
        Text: "Health: ";
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #93844c
        );
        Anchor: (Vertical: 0);
      }
      Label #HealthValue {
        Text: "Health:";
        Style: (
          FontSize: 14,
          RenderBold: false,
          TextColor: #ffffff
        );
        Anchor: (Vertical: 0);
      }
    }
    Group {
      LayoutMode: Left;
      Label  {
        Text: "World: ";
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #93844c
        );
        Anchor: (Vertical: 0);
      }
      Label #WorldValue {
        Text: "Health:";
        Style: (
          FontSize: 14,
          RenderBold: false,
          TextColor: #ffffff
        );
        Anchor: (Vertical: 0);
      }
      Label  {
        Anchor: (Left: 10);
        Text: "X: ";
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #93844c
        );
      }
      Label #XValue {
        Text: "Health:";
        Style: (
          FontSize: 14,
          RenderBold: false,
          TextColor: #ffffff
        );
        Anchor: (Vertical: 0);
      }
      Label  {
        Text: "Y: ";
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #93844c
        );
        Anchor: (Left: 10);
      }
      Label #YValue {
        Text: "Y:";
        Style: (
          FontSize: 14,
          RenderBold: false,
          TextColor: #ffffff
        );
        Anchor: (Vertical: 0);
      }
      Label  {
        Text: "Z: ";
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #93844c
        );
        Anchor: (Left: 10);
      }
      Label #ZValue {
        Text: "Z:";
        Style: (
          FontSize: 14,
          RenderBold: false,
          TextColor: #ffffff
        );
        Anchor: (Vertical: 0);
      }
      $C.@TextButton #TeleportToButton {
        Anchor: (Height: 20, Right: 4, Left: 10, Width: 90);
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        Text: "TP THERE";
        Style: @CustomStyle;
      }
    }

    Group {
      LayoutMode: Left;
      Anchor: (Bottom: 5);

      Group #Gamemode {
        LayoutMode: Top;
        FlexWeight: 1;
        Anchor: (Right: 8);

        Label #GamemodeLabel {
          Text: "Gamemode";
          Style: (
            FontSize: 15,
            RenderBold: true,
            TextColor: #93844c
          );
          Anchor: (Vertical: 0);
        }

        $C.@DropdownBox #GamemodeDropdown {
          Anchor: (Width: 262, Height: 20);
          Style: @DefaultDropdownBoxStyle;
        }
      }

      Group #Model {
        LayoutMode: Top;
        FlexWeight: 1;

        Label #GamemodeLabel {
          Text: "Model";
          Style: (
            FontSize: 15,
            RenderBold: true,
            TextColor: #93844c
          );
          Anchor: (Left:2);
        
        }

        Group {
          LayoutMode: Left;
        
          $C.@DropdownBox #ModelDropdown {
            Anchor: (Width: 200, Height: 20);
            Style: (
              ...@DefaultDropdownBoxStyle,
              SearchInputStyle: DropdownBoxSearchInputStyle(
                Anchor: (Height: 20),
                Padding: (Left: 28, Right: 24),
                PlaceholderText: %customUI.searchPlaceholder,
                PlaceholderStyle: (TextColor: #3d5a85, RenderUppercase: true, FontSize: 14),
                Icon: (Texture: "Common/SearchIcon.png", Width: 16, Height: 16, Offset: 9),
                ClearButtonStyle: $C.@ClearButtonStyle
              )
            );
            ShowSearchInput: true;
          }
          $C.@TextButton #ModelResetButton {
            FlexWeight: 1;
            Anchor: (Height: 20, Right: 4, Left: 2);
            Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
            Text: "Reset";
            Style: @CustomStyle;
          }
        }
      }

    }

  
    Group #Actions{
      LayoutMode: Left;
      $C.@TextButton #TeleportHereButton {
        FlexWeight: 1;
        Anchor: ( Height: 20, Right: 4);
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        Text: "TP Here";
        Style: @CustomStyle;
      }
      $C.@TextButton #HealButton {
        FlexWeight: 1;
        Anchor: ( Height: 20, Right: 4);
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        Text: "Heal";
        Style: @CustomStyle;
      }
      $C.@TextButton #KillButton {
        FlexWeight: 1;
        Anchor: ( Height: 20, Right: 4);
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        Text: "Kill";
        Style: @CustomStyle;
      }
      $C.@TextButton #InventoryButton {
        FlexWeight: 1;
        Anchor: ( Height: 20, Right: 4);
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        Text: "SEE INV";
        Style: @CustomStyle;
      }
      $C.@TextButton #KickButton {
        FlexWeight: 1;
        Anchor: ( Height: 20, Right: 4);
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        Text: "Kick";
        Style: @CustomStyle;
      }
      $C.@TextButton #BanButton {
        FlexWeight: 1;
        Anchor: (Height: 20, Right: 2);
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        Text: "Ban";
        Style: @CustomStyle;
      }
    }
  }
}