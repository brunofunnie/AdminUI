$C = "../../Common.ui";
$Nav = "../Nav/Buuz135_AdminUI_TopNavigationBar.ui";

$C.@PageOverlay {
  $Nav.@AdminUITopNavigationBar #AdminUITopNavigationBar {}

  $C.@DecoratedContainer {
    Anchor: (Width: 600, Height: 669);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }

        $C.@Title {
          @Text = "Your Admin Stick Configuration";
        }
      }
    }

    #Content {
      LayoutMode: Left;

      Group #Main {
        LayoutMode: Top;

        Group #IndexList {
          Anchor: (Width: 580);
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Padding: (Left: 4);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #IndexCards {
            LayoutMode: Top;

            Group #Ability1{
              LayoutMode: Left;
              Padding: (Top: 8, Bottom: 8, Left: 8, Right: 8);
              Label {
                Text: "Q (Ability 1)";
                Style: (
                  FontSize: 16,
                  RenderBold: true,
                  TextColor: #ffffff
                );
              }
              Label {
                FlexWeight: 1;
              }
              $C.@DropdownBox #Ability1Dropdown {
                Anchor: (Width: 262, Height: 20);
                Style: @DefaultDropdownBoxStyle;
              }
            }

            Group #Ability2{
              LayoutMode: Left;
              Padding: (Top: 8, Bottom: 8, Left: 8, Right: 8);
              Label {
                Text: "E (Ability 2)";
                Style: (
                  FontSize: 16,
                  RenderBold: true,
                  TextColor: #ffffff
                );
              }
              Label {
                FlexWeight: 1;
              }
              $C.@DropdownBox #Ability2Dropdown {
                Anchor: (Width: 262, Height: 20);
                Style: @DefaultDropdownBoxStyle;
              }
            }

            Group #Ability3{
              LayoutMode: Left;
              Padding: (Top: 8, Bottom: 8, Left: 8, Right: 8);
              Label {
                Text: "R (Ability 3)";
                Style: (
                  FontSize: 16,
                  RenderBold: true,
                  TextColor: #ffffff
                );
              }
              Label {
                FlexWeight: 1;
              }
              $C.@DropdownBox #Ability3Dropdown {
                Anchor: (Width: 262, Height: 20);
                Style: @DefaultDropdownBoxStyle;
              }
            }

            Group #LeftClick{
              LayoutMode: Left;
              Padding: (Top: 8, Bottom: 8, Left: 8, Right: 8);
              Label {
                Text: "Left Click";
                Style: (
                  FontSize: 16,
                  RenderBold: true,
                  TextColor: #ffffff
                );
              }
              Label {
                FlexWeight: 1;
              }
              $C.@DropdownBox #LeftClickDropdown {
                Anchor: (Width: 262, Height: 20);
                Style: @DefaultDropdownBoxStyle;
              }
            }

            Group #RightClick{
              LayoutMode: Left;
              Padding: (Top: 8, Bottom: 8, Left: 8, Right: 8);
              Label {
                Text: "Right Click";
                Style: (
                  FontSize: 16,
                  RenderBold: true,
                  TextColor: #ffffff
                );
              }
              Label {
                FlexWeight: 1;
              }
              $C.@DropdownBox #RightClickDropdown {
                Anchor: (Width: 262, Height: 20);
                Style: @DefaultDropdownBoxStyle;
              }
            }

            Group #MiddleClick{
              LayoutMode: Left;
              Padding: (Top: 8, Bottom: 8, Left: 8, Right: 8);
              Label {
                Text: "Middle Click";
